type User {
  id: ID! @unique
  courses: [Course!]!
  student_id: Int @unique
  name: String!
  nickname: String
  picture: String
  admin: Boolean! @default(value: "false") 
  email: String! @unique
  photo: String
  isAdmin: Boolean @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
  activations: [Activation!]!
}

type Course {
  id: ID! @unique
  users: [User!]!
  name: String!
  description: String
  activations: [Activation!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Activation {
  id: ID! @unique
  activation_code: String! @unique
  course: Course!
  user: User
  activatedAt: DateTime!
  createdAt: DateTime!
  updatedAt: DateTime!
}
