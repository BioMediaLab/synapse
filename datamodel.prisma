type User {
  id: ID! @unique
  courses: [Course!]!
  student_id: Int @unique
  name: String!
  nickname: String
  email: String! @unique
  photo: String
  createdAt: DateTime!
  updatedAt: DateTime!
  activations: [Activation!]!
}

type Course {
  id: ID! @unique
  users: [User!]!
  name: String!
  description: String
  activations: [Activation!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Activation {
  id: ID! @unique
  activation_code: String! @unique
  course_id: String
  user_id: String
  activatedAt: DateTime!
  createdAt: DateTime!
  updatedAt: DateTime!
}
