type User {
  id: ID! @unique
  courses: [Course!]!
  student_id: Int
  name: String!
  nickname: String
  email: String! @unique
  photo: String
  isAdmin: Boolean @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
  activations: [Activation!]!
  notifications: [Notification!]! @relation(name: "UserNotifications")
}

type Course {
  id: ID! @unique
  users: [User!]!
  name: String!
  description: String
  activations: [Activation!]!
  notifications: [Notification!]! @relation(name: "CourseNotifications")
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Activation {
  id: ID! @unique
  activation_code: String! @unique
  course: Course!
  user: User
  activatedAt: DateTime!
  createdAt: DateTime!
  updatedAt: DateTime!
}

enum NoteType {
  INFORMATIVE,
  NEW_COURSE,
}

type Notification {
  id: ID! @unique
  user: User @relation(name: "UserNotifications")
  course: Course @relation(name: "CourseNotifications")
  is_global: Boolean @default(value: "false")
  note_type: NoteType! @default(value: "INFORMATIVE")
  msg: String
  add_data: Json
  createdAt: DateTime!
  updatedAt: DateTime!
}
